#include <stdio.h>

int main() {
    int N, i;
    int fatorial = 1; // VariÃ¡vel para armazenar o resultado do fatorial

    // LÃª o valor de N
    printf("Digite um nÃºmero inteiro N: ");
    scanf("%d", &N);

    // Verifica se o nÃºmero Ã© negativo
    if (N < 0) {
        printf("Fatorial nÃ£o Ã© definido para nÃºmeros negativos.\n");
    } else {
        // Calcula o fatorial de N
        for (i = 1; i <= N; i++) {
            fatorial = fatorial * i;

        }
        printf("%d! = %d\n", N, fatorial);
    }

    return 0;
}
